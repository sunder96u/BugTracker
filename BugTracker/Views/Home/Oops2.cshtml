
@{
    ViewBag.Title = "Oops2";
}

<div id="content">

    <!-- row -->
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="text-center error-box">
                        <h1 class="error-text-2 bounceInDown animated"> Error Unauthorized Access <span class="particle particle--c"></span><span class="particle particle--a"></span><span class="particle particle--b"></span></h1>
                        <h2 class="font-xl"><strong><i class="fa fa-fw fa-warning fa-lg text-warning"></i><u>Unauthorized Access</u></strong></h2>
                        <br />
                        <p class="lead">
                            You are not Authorized to view this page, if you believe this is a mistake please contact your Administrator otherwise, Use your browsers <b>Back</b> button to navigate to the page you have prevously come from or use one of the links below.
                        </p>
                        <br>

                        <div class="row">

                            <div class="col-sm-12">
                                <ul class="list-inline">
                                    <li>
                                        &nbsp;<a href=@Html.ActionLink("Dashboard","Index","Dashboard", null)</a>&nbsp;
                                    </li>
                                    <li>
                                        .
                                    </li>
                                    <li>
                                        &nbsp;<a href=@Html.ActionLink("My Tickets","MyTickets","Projects", null)</a>&nbsp;
                                    </li>
                                    <li>
                                        .
                                    </li>
                                    <li>
                                        &nbsp;<a href=@Html.ActionLink("My Projects","MyProjects","Projects", null)</a>&nbsp;
                                    </li>
                                </ul>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- end row -->

    </div>

</div>
<!-- END MAIN CONTENT -->
@section scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        let data = '@TempData["OopsMsg"]';

        if (data != '') {
            window.onload = function () {
                swal("Authorization Error", data, "error");
            }
        }

    </script>
}