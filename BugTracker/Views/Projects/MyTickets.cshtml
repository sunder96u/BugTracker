@model IEnumerable<BugTracker.Models.Project>
@using Microsoft.AspNet.Identity

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />

@{
    ViewBag.Title = "MyTickets";
}

<h2>My Tickets</h2>

<section id="widget-grid" class="">
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            @foreach (var proj in Model)
            {
                <div class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-colorbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-ticket"></i> </span>
                        <h2>@proj.Name</h2>
                    </header>
                    <div>
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table @*id="dt_basic"*@ class="table @*table-striped table-bordered table-hover*@ @*dataTable*@" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Title")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Priority Level")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Ticket Status")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Ticket Type")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Created On")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Developer")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Submitter")
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in proj.Tickets)
                                    {
                                        if ((User.IsInRole("Developer") && (item.AssignedToUserId == User.Identity.GetUserId())) ||
                                (User.IsInRole("Submitter") && (item.OwnerUserId == User.Identity.GetUserId())) ||
                                (User.IsInRole("Project Manager")) ||
                                (User.IsInRole("Admin")))
                                        {

                                            <tr>
                                                <td class="tablelink">
                                                    <a> @Html.ActionLink(item.Title, "Details", "Tickets", new { id = item.Id }, new { Style = "color:Black;" }) </a>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Created)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AssignedToUser.DisplayName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.OwnerUser.DisplayName)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", "Tickets", new { id = item.Id }, null) |
                                                    @Html.ActionLink("Details", "Details", "Tickets", new { id = item.Id }, null)
                                                    @if (User.IsInRole("Project Manager") || User.IsInRole("Admin"))
                                                    {
                                                        @Html.ActionLink("Add Developer", "AssignDev", "Tickets", new { id = item.Id }, null)
                                                    }
                                                </td>
                                            </tr>

                                        }

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            }
        </article>
    </div>

</section>
@*}*@
